<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="510.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dcs.aber.ac.uk.csm2020_group_3.UI.AdminTimetableController">
    <Label layoutX="256.0" layoutY="10.0" text="Timetable">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <Text layoutX="80.0" layoutY="72.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Course:" />
    <ComboBox fx:id="courseComboBox" editable="true" layoutX="126.0" layoutY="55.0" prefHeight="26.0" prefWidth="270.0" />
    <Text layoutX="413.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Year:" />
    <ComboBox fx:id="yearComboBox" editable="true" layoutX="445.0" layoutY="54.0" prefHeight="26.0" prefWidth="128.0" />

    <Pane prefHeight="510.0" prefWidth="55.0" style="-fx-background-color: lightgrey;" />
    <Pane fx:id="expandedPane" layoutX="-1.0" prefHeight="510.0" prefWidth="140.0" style="-fx-background-color: lightgrey;" visible="false">
        <children>
            <Pane prefHeight="510.0" prefWidth="600.0" />
            <Button fx:id="adminTimetableBtn" layoutX="6.0" layoutY="120.0" mnemonicParsing="false" onAction="#toAdminTimetable" prefHeight="30.0" prefWidth="128.0" text="Timetable" />
            <Button fx:id="adminBtn" layoutX="6.0" layoutY="70.0" mnemonicParsing="false" onAction="#toAdmin" prefHeight="30.0" prefWidth="128.0" text="Admin" />
            <Button fx:id="logoutBtn" layoutX="6.0" layoutY="170.0" mnemonicParsing="false" onAction="#logout" prefHeight="30.0" prefWidth="128.0" text="Log-Out" />
        </children>
    </Pane>
    <Button fx:id="burgerBtn" layoutX="8.0" layoutY="5.0" minWidth="40.0" mnemonicParsing="false" onAction="#pressBurgerBtn" prefHeight="40.0" prefWidth="40.0">
        <graphic>
            <ImageView fx:id="burgerIcon" fitHeight="32.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@burgerBtn.png" />
                </image></ImageView>
        </graphic></Button>
</AnchorPane>
